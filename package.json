{
  "name": "nano-kata",
  "type": "module",
  "scripts": {
    "format": "prettier src --write",
    "lint": "eslint --fix --cache",
    "typecheck": "tsc --noEmit",
    "test:run": "vitest run",
    "dev": "vinxi dev",
    "build": "vinxi build",
    "start": "vinxi start",
    "version": "vinxi version",
    "db:migrate": "kysely migrate latest",
    "db:codegen": "kysely-codegen --dialect sqlite --out-file src/db/generated.ts --url ./kata.sqlite",
    "checkins:add": "pnpm exec tsx scripts/add-check-in.ts",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "@solidjs/meta": "^0.29.4",
    "@solidjs/router": "^0.15.4",
    "@solidjs/start": "^1.2.0",
    "better-sqlite3": "^12.4.1",
    "kysely": "^0.28.8",
    "solid-js": "^1.9.10",
    "vinxi": "^0.5.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-solid": "^0.14.5",
    "globals": "^16.5.0",
    "kysely-codegen": "^0.19.0",
    "kysely-ctl": "^0.19.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.10"
  },
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "simple-git-hooks"
    ]
  },
  "simple-git-hooks": {
    "pre-push": "pnpm lint && pnpm typecheck && pnpm test:run"
  }
}
